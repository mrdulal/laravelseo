{
    "name": "laravel-seo-pro/seo-pro",
    "description": "A comprehensive SEO toolkit for Laravel applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Laravel SEO Pro",
            "email": "info@laravelseopro.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/view": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.0"
    },
    "suggest": {
        "livewire/livewire": "^2.0|^3.0 - For Livewire components and reactive SEO management",
        "filament/filament": "^2.0|^3.0 - For Filament admin panel integration"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelSeoPro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelSeoPro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelSeoPro\\SeoProServiceProvider"
            ],
            "aliases": {
                "Seo": "LaravelSeoPro\\Facades\\Seo"
            }
        }
    }
}
